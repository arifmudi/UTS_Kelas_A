echo "Hello, there. What's your first name?\n";
$name = readline(">> ");
// KELas A
$name_length = strlen($name);

if ($name_length > 10) {
    echo "Hi, ${name}. That's a long name.";
} elseif ($name_length > 3) {
    echo "Hi, ${name}.";
} else {
    echo "Hi, ${name}. That's a short name.";
}